<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/border"
    android:orientation="horizontal">

    <com.example.pgyl.pekislib_a.ImageButtonView
        android:id="@+id/BTN_MODE_SELECTION"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="16" />

    <com.example.pgyl.pekislib_a.ImageButtonView
        android:id="@+id/BTN_START_STOP"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="16" />

    <com.example.pgyl.pekislib_a.ImageButtonView
        android:id="@+id/BTN_SPLIT"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="16" />

    <com.example.pgyl.pekislib_a.ImageButtonView
        android:id="@+id/BTN_RESET"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="16" />

    <com.example.pgyl.pekislib_a.ImageButtonView
        android:id="@+id/BTN_CLOCK_APP_ALARM"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="16" />

    <com.example.pgyl.pekislib_a.DotMatrixDisplayView
        android:id="@+id/BTN_DOT_MATRIX_DISPLAY_TIME_LABEL"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_weight="53"
        android:paddingTop="2dp" />

</LinearLayout>