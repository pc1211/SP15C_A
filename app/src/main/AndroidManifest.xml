<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pgyl.swtimer_a">

    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <application
        android:allowBackup="false"
        android:icon="@drawable/app_icon"
        android:label="Swtimer"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.pgyl.swtimer_a.MainActivity"
            android:exported="true"
            android:label="Swtimer"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pgyl.swtimer_a.CtDisplayActivity"
            android:label="CtDisplayActivity" />
        <activity
            android:name="com.example.pgyl.pekislib_a.PresetsActivity"
            android:label="PresetsActivity" />
        <activity
            android:name="com.example.pgyl.pekislib_a.InputButtonsActivity"
            android:label="InputButtonsActivity" />
        <activity
            android:name="com.example.pgyl.swtimer_a.CtDisplayColorsActivity"
            android:label="CtDisplayColorsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.pgyl.swtimer_a.CtDisplayDotMatrixDisplayActivity"
            android:label="CtDisplayDotMatrixDisplayActivity" />
        <activity
            android:name="com.example.pgyl.pekislib_a.HelpActivity"
            android:label="HelpActivity" />

        <service
            android:name="com.example.pgyl.pekislib_a.BeepIntentService"
            android:exported="false" />
    </application>
</manifest>
